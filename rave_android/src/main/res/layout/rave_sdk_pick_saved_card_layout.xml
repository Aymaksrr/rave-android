<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rave_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/rave_use_new_card_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="5"
        tools:listitem="@layout/rave_sdk_card_preview_item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/rave_use_new_card_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/fabStyle"
        android:layout_marginHorizontal="16dp"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toTopOf="@id/rave_pcidss_compliant_tv"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/rave_pcidss_compliant_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:text="@string/pci_dss_compliant"
        android:textColor="@color/raveBlack"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/secured_by_flutterwave_tv"
        app:layout_constraintEnd_toEndOf="@id/secured_by_flutterwave_tv"
        app:layout_constraintStart_toStartOf="@id/secured_by_flutterwave_tv" />

    <TextView
        android:id="@+id/secured_by_flutterwave_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/black_background_curved"
        android:gravity="center_vertical"
        android:layout_marginVertical="4dp"
        android:padding="6dp"
        android:text="@string/secured_by_flutterwave"
        android:textColor="#F4B918"
        android:textSize="10sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_logo"
        app:drawableStartCompat="@drawable/ic_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rave_recycler"
        app:layout_constraintStart_toStartOf="@id/rave_recycler" />

</androidx.constraintlayout.widget.ConstraintLayout>